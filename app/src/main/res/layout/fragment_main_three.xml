<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#d9edcd"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.myplayer.fragment.MainThreeNavigationButton
            android:id="@+id/nav_item_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_12dp"
            android:paddingRight="@dimen/_12dp" />

        <com.example.myplayer.fragment.MainThreeNavigationButton
            android:id="@+id/nav_item_tweet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_12dp"
            android:paddingRight="@dimen/_12dp" />

        <ImageView
            android:id="@+id/nav_item_tweet_pub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_nav_add_selector" />

        <com.example.myplayer.fragment.MainThreeNavigationButton
            android:id="@+id/nav_item_explore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_12dp"
            android:paddingRight="@dimen/_12dp" />

        <com.example.myplayer.fragment.MainThreeNavigationButton
            android:id="@+id/nav_item_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_12dp"
            android:paddingRight="@dimen/_12dp" />
    </LinearLayout>
</LinearLayout>
