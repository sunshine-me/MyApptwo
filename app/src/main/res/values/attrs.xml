<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 信誉等级 -->
    <declare-styleable name="Credit">
        <attr name="creditSize" format="dimension" />
        <attr name="creditAlignment" format="enum">
            <enum name="bottom" value="0" />
            <enum name="baseline" value="1" />
        </attr>
        <attr name="creditTextStart" format="integer" />
        <attr name="creditTextLength" format="integer" />
    </declare-styleable>
    <declare-styleable name="CustomSeekBar">
        <attr name="numTextFormat" format="string" />
        <attr name="ico_left" format="reference" />
        <attr name="ico_right" format="reference" />
        <attr name="numTextSize" format="dimension" />
        <attr name="numTextColor" format="color" />
        <attr name="numScale" format="string" />
        <attr name="numType" format="enum">
            <enum name="top" value="48" />
            <enum name="bottom" value="80" />
        </attr>

    </declare-styleable>

    <!--自带选择器  不用在创建 选择器增加文件-->
    <declare-styleable name="StateTextView">
        <attr name="normalTextColorBtn" format="color|reference" />
        <attr name="pressedTextColorBtn" format="color|reference" />
        <attr name="unableTextColorBtn" format="color|reference" />

        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <attr name="normalBackgroundDrawable" format="reference" />
        <attr name="pressedBackgroundDrawable" format="reference" />
        <attr name="radius" format="dimension|reference" />
        <attr name="roundBtn" format="boolean|reference" />
        <attr name="animationDuration" format="integer|reference" />
    </declare-styleable>
</resources>